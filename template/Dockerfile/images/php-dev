{% import 'Dockerfile/provision' as provision %}

{% macro alpine(role='') -%}
# Install tools
RUN /usr/local/bin/apk-install \
        graphviz \
    {{ provision.runRoleInline('php-dev', role) }}
{%- endmacro %}


{% macro centos(role='') -%}
# Install tools
RUN /usr/local/bin/yum-install \
        graphviz \
    {{ provision.runRoleInline('php-dev', role) }}
{%- endmacro %}


{% macro debian(role='') -%}
# Install tools
RUN /usr/local/bin/apt-install \
        graphviz \
    {{ provision.runRoleInline('nginx', role) }}
{%- endmacro %}


{% macro ubuntu(role='') -%}
# Install tools
RUN /usr/local/bin/apt-install \
        graphviz \
    {{ provision.runRoleInline('nginx', role) }}
{%- endmacro %}
